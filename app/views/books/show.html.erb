<div class = "container">
  <div class ="row">
    <div class = "col-md-3">
      <%= render 'users/list', user: @book.user %>
      <h2>New book</h2>
      <%= form_with model: @new_book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class = "table">
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
             <%= image_tag @book.user.get_profile_image(100,100) %><br>
             <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user == current_user %>
             <td>
               <%= link_to"Edit", edit_book_path(@book.id), class: "btn btn-success" %>
             </td>
             <td>
               <%= link_to"Destroy", book_path(@book.id), method: :delete, data: {confirm: "Are you sure?" } , class: "btn btn-danger" %>
             </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>

  




