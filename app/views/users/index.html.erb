<div class ="container">
  <div class = "row">
    <div class ="col-md-3">
      <%= render 'list', user: current_user %>
      
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' , class: "btn btn-success" %>
      <% end %>
      
    </div>
    
    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class = "table">
        <tr><th>image</th><th>name</th></tr>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table> 
    </div>
  </div>
</div>
