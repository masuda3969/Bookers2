<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-8 px-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
      </h3>
      <ul>
       <%= @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class = "form-group">
           <label for="inputName" class = "form-label d-block">Name</label>
           <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name" %>
        </div>
        <div class = "form-group">
           <label for="inputImage" class = "form-label d-block">Image</label>
           <%= f.file_field :profile_image, placehoder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class = "form-group">
           <label for="inputIntroduction" class = "form-label d-block">Introduction</label>
           <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control name" %>
        </div>
        <div class = "form-group">
           <%= f.submit "Update User" , class: "d-block btn btn-secondary"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
 




  
  


